
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#FF5722"/> <!-- Dark orange color when pressed -->
            <stroke android:width="8dp" android:color="#BF360C"/> <!-- Larger border -->
            <corners android:radius="8dp"/>
            <padding android:left="10dp" android:top="10dp" android:right="10dp" android:bottom="10dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#FF9800"/> <!-- Orange color when not pressed -->
            <stroke android:width="8dp" android:color="#BF360C"/> <!-- Larger border -->
            <corners android:radius="8dp"/>
            <padding android:left="10dp" android:top="10dp" android:right="10dp" android:bottom="10dp"/>
        </shape>
    </item>
</selector>