

<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@drawable/english_0"
        xmlns:tools="http://schemas.android.com/tools">


    <data>
        <variable
                name="assignment"
                type="com.bytebrigade.attackoftheschool.gameplay.assignment.Assignment" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <TextView
                android:id="@+id/currentClassText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="English"
                android:textSize="80sp"
                android:singleLine="false"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5" />

        <TextView
                android:id="@+id/nameEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Level 1"
                android:textStyle="bold"
                android:textSize="40sp"
                android:singleLine="false"
                tools:ignore="MissingConstraints"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="120dp"
                app:layout_constraintStart_toStartOf="parent"
                android:textColor="@android:color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/clickableBlock"
                app:layout_constraintHorizontal_bias="0.5"
        />
        <Button
                android:id="@+id/prevStage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back"
                android:textSize="20sp"
                android:visibility="invisible"
                app:layout_constraintEnd_toStartOf="@+id/nameEditText"
                app:layout_constraintBottom_toBottomOf="@+id/nameEditText"
        />
        <Button
                android:id="@+id/nextStage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Next"
                android:visibility="invisible"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@+id/nameEditText"
                app:layout_constraintBottom_toBottomOf="@+id/nameEditText"
        />
        <Button
                android:id="@+id/maxStage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Max"
                android:visibility="invisible"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@+id/nextStage"
                app:layout_constraintBottom_toBottomOf="@+id/nameEditText"
        />

        <LinearLayout
                android:id="@+id/clickableBlock"
                android:layout_width="194dp"
                android:layout_height="199dp"
                android:background="@drawable/assignmenttemp1"
                android:paddingVertical="32dp"
                android:paddingHorizontal="16dp"
                android:clickable="true"
                android:focusable="true"
                android:orientation="horizontal"
                tools:ignore="MissingConstraints"
                android:layout_marginTop="100dp"
                app:layout_constraintTop_toBottomOf="@+id/nameEditText"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="104dp"
                android:layout_marginEnd="113dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="36dp"
                app:layout_constraintBottom_toTopOf="@+id/progressBar" />

        <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="229dp"
                android:layout_height="52dp"
                android:progress="@{assignment.currentClickAmount.intValue()}"
                android:max="@{assignment.maxClickAmount.intValue()}"
                tools:ignore="MissingConstraints"
                android:layout_marginEnd="180dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="183dp"
                android:layout_marginTop="36dp"
                style="@android:style/Widget.ProgressBar.Horizontal"
                app:layout_constraintTop_toBottomOf="@+id/clickableBlock"/>

        <Button
                android:id="@+id/menuButton"
                android:layout_width="375dp"
                android:layout_height="56dp"
                android:text="Menu"
                tools:ignore="MissingConstraints"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="161dp"
                android:layout_marginEnd="162dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                style="@style/Widget.AppCompat.Button" app:layout_constraintHorizontal_bias="0.527"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.981"/>
        <Button
                android:id="@+id/helper_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mom"
                android:background="#04A1E8"
                android:backgroundTint="#03A9F4"
                tools:ignore="MissingConstraints"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="161dp"
                android:layout_marginEnd="162dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="102dp"
                app:layout_constraintBottom_toTopOf="@+id/menuButton"
                android:layout_marginTop="35dp"
                app:layout_constraintTop_toBottomOf="@+id/progressBar" />
        <Button
                android:id="@+id/godMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GOD MODE"
                android:background="#04A1E8"
                android:backgroundTint="#03A9F4"
                tools:ignore="MissingConstraints"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="161dp"
                android:layout_marginEnd="162dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="102dp"
                app:layout_constraintBottom_toTopOf="@+id/menuButton"
                android:layout_marginTop="35dp"
                app:layout_constraintTop_toBottomOf="@+id/helper_button" />
        <Button
                android:id="@+id/plus49"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="plus 49 levels"
                android:background="#04A1E8"
                android:backgroundTint="#03A9F4"
                tools:ignore="MissingConstraints"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="161dp"
                android:layout_marginEnd="162dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="102dp"
                app:layout_constraintBottom_toTopOf="@+id/menuButton"
                android:layout_marginTop="35dp"
                app:layout_constraintTop_toBottomOf="@+id/godMode" />

        <!--aaaaaaaaaaaa-->
        <!--aaaaaaaaaaaa-->
        <!--aaaaaaaaaaaa-->
        <!--aaaaaaaaaaaa-->
        <!--aaaaaaaaaaaa-->
        <!--aaaaaaaaaaaa-->
        <!--aaaaaaaaaaaa-->
        <!--aaaaaaaaaaaa-->
        <!--aaaaaaaaaaaa-->
        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/menuLayout"
        android:layout_width="match_parent"
                android:background="#80000000"
                android:visibility="gone"
        android:layout_height="match_parent">

            <Button
                    android:text="Character Stats"
                    android:layout_width="124dp"
                    android:layout_height="154dp" android:id="@+id/ImagePlaceHolder"
                    style="@style/Widget.AppCompat.Button"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.255"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="28dp"
                    android:layout_marginEnd="259dp" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"/>
            <Button
                    android:text="PGT-Botter"
                    android:layout_width="380dp"
                    android:layout_height="52dp" android:id="@+id/botter"
                    style="@style/Widget.AppCompat.Button"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.516"
                    app:layout_constraintVertical_bias="0.804"/>
            <Button
                    android:text="Back"
                    android:layout_width="380dp"
                    android:layout_height="52dp" android:id="@+id/back"
                    style="@style/Widget.AppCompat.Button"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.58"
                    app:layout_constraintVertical_bias="0.959"/>
            <Button
                    android:text="Challenge Teacher"
                    android:layout_width="379dp"
                    android:layout_height="48dp" android:id="@+id/button5"
                    style="@style/Widget.AppCompat.Button"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintVertical_bias="0.721"
            />
            <Button
                    android:text="Library Upgrades"
                    android:layout_width="379dp"
                    android:layout_height="53dp" android:id="@+id/LibraryUpgrades"
                    style="@style/Widget.AppCompat.Button"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintVertical_bias="0.879" app:layout_constraintHorizontal_bias="0.562"/>
            <Button
                    android:text="Classes"
                    android:layout_width="378dp"
                    android:layout_height="50dp" android:id="@+id/Classes"
                    style="@style/Widget.AppCompat.Button"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.454"
                    app:layout_constraintVertical_bias="0.649"/>
            <Button
                    android:text="Store"
                    android:layout_width="380dp"
                    android:layout_height="50dp" android:id="@+id/button3"
                    style="@style/Widget.AppCompat.Button"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintHorizontal_bias="0.483" app:layout_constraintVertical_bias="0.558"/>
            <Button
                    android:text="Image Placeholder"
                    android:layout_width="124dp"
                    android:layout_height="154dp" android:id="@+id/Stats"
                    app:cornerRadius="@null"
                    app:shapeAppearance="?android:attr/windowTitleStyle"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.839"
                    app:layout_constraintVertical_bias="0.255"/>
            <ImageButton
                    android:layout_width="146dp"
                    android:layout_height="94dp" app:srcCompat="@android:drawable/arrow_down_float"
                    android:id="@+id/imageView2"
                    app:tint="#0B0A0A" app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="797dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="132dp" android:layout_marginEnd="133dp"
                    app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

