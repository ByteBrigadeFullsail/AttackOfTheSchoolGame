<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
                name="assignment"
                type="com.bytebrigade.attackoftheschool.gameplay.Assignment" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:id="@+id/nameEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{assignment.assignmentName}"
                android:textSize="30sp"
                android:singleLine="true"
                tools:ignore="MissingConstraints"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="69dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="126dp"
                android:layout_marginEnd="127dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/clickableBlock"
                app:layout_constraintHorizontal_bias="0.0" />

        <LinearLayout
                android:id="@+id/clickableBlock"
                android:layout_width="194dp"
                android:layout_height="199dp"
                android:background="@drawable/assignmenttemp"
                android:paddingVertical="32dp"
                android:paddingHorizontal="16dp"
                android:clickable="true"
                android:focusable="true"
                android:orientation="horizontal"
                tools:ignore="MissingConstraints"
                android:layout_marginTop="100dp"
                app:layout_constraintTop_toBottomOf="@+id/nameEditText"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="104dp"
                android:layout_marginEnd="113dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="36dp"
                app:layout_constraintBottom_toTopOf="@+id/progressBar" />

        <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="229dp"
                android:layout_height="52dp"
                android:progress="@{assignment.currentClickAmount.intValue()}"
                android:max="@{assignment.maxClickAmount.intValue()}"
                tools:ignore="MissingConstraints"
                android:layout_marginEnd="180dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="183dp"
                android:layout_marginTop="36dp"
                style="@android:style/Widget.ProgressBar.Horizontal"
                app:layout_constraintTop_toBottomOf="@+id/clickableBlock"/>

        <Button
                android:id="@+id/menuButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Menu"
                tools:ignore="MissingConstraints"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="161dp"
                android:layout_marginEnd="162dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="5dp"
                app:layout_constraintTop_toBottomOf="@+id/helper_button" />

        <Button
                android:id="@+id/helper_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mom"
                android:background="#04A1E8"
                android:backgroundTint="#03A9F4"
                tools:ignore="MissingConstraints"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="161dp"
                android:layout_marginEnd="162dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="102dp"
                app:layout_constraintBottom_toTopOf="@+id/menuButton"
                android:layout_marginTop="35dp"
                app:layout_constraintTop_toBottomOf="@+id/progressBar" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
